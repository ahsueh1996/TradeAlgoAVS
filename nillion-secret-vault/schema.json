{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Trading Strategies",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "strategy_name": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": ["$share"]
            },
            "strategy_code": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": ["$share"]
            },
            "strategy_provider": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": ["$share"]
            },
            "roi": {
                "type": "number"
            },
            "profitability": {
                "type": "number"
            },
            "risk": {
                "type": "number"
            }
        },
        "required": ["_id", "strategy_name", "strategy_code", "strategy_provider", "roi", "profitability", "risk"]
    }
}
